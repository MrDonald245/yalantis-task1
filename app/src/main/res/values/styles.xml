<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="root_element">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_padding</item>
        <item name="android:paddingRight">@dimen/activity_padding</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>
    
    <style name="header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_among_elements</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="status">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_among_elements</item>
        <item name="android:layout_marginTop">@dimen/padding_among_elements</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textColor">@color/colorStatusText</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">@dimen/padding_among_elements</item>
        <item name="android:layout_marginTop">@dimen/padding_among_elements</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!-- [Comment] We don't include relativity attributes into styles.xml For example: marginTop, marginBottom e.t.c-->

    <style name="content_block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_among_elements</item>
        <item name="android:layout_marginTop">@dimen/padding_among_elements</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="content_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="content_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="caption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_among_elements</item>
        <item name="android:layout_marginTop">@dimen/padding_among_elements</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="recycler_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_among_elements</item>
        <item name="android:scrollbars">horizontal</item>
    </style>

    <style name="item_photo">
        <item name="android:layout_width">@dimen/photo_width</item>
        <item name="android:layout_height">@dimen/photo_height</item>
        <item name="android:layout_marginLeft">@dimen/photo_margin</item>
        <item name="android:layout_marginRight">@dimen/photo_margin</item>
    </style>

</resources>
